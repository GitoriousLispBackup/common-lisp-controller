#!/bin/bash

PROGNAME=$(basename $0)

if [ `id -u` != 0 ] ; then
 echo You need to be root to run $PROGNAME
 exit 1
fi

if [ -z "$1" ] ; then
 cat <<EOF
usage: $PROGNAME compiler-name 

un-registers a Common Lisp compiler to the 
Common-Lisp-Controller system.
EOF
    exit 1
fi

IMPL_BIN="/usr/lib/common-lisp/bin/$1.sh"

if [ ! -f "$IMPL_BIN" ] ; then
  cat <<EOF
$PROGNAME: No implementation of the name $1 is registered 
Cannot find the file $IMPL_BIN

Maybe you already removed it?
EOF
  exit 0
fi
if [ ! -r "$IMPL_BIN" ] ; then
  cat <<EOF
$PROGNAME: No implementation of the name $1 is registered 
Cannot read the file $IMPL_BIN

Maybe you already removed it?
EOF
  exit 0
fi

# Uninstall the CLC
sh $IMPL_BIN remove-defsystem || echo "De-installation of CLC failed" >&2

# Just remove the damn subtree

(cd / ; rm -rf "/usr/lib/common-lisp/${1}/" ; true )

echo "$PROGNAME: Common Lisp implementation $1 uninstalled"

